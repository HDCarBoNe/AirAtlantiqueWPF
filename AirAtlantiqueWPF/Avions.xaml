<Window x:Class="AirAtlantiqueWPF.Avions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirAtlantiqueWPF"
        mc:Ignorable="d"
        Title="Avions" Height="450" Width="800">
    <DockPanel>
        <Menu x:Name="Menu" DockPanel.Dock="Top">
            <MenuItem Header="_Options">
                <MenuItem Header="_Ajouter un avion" />
                <MenuItem Header="_Sauvegrader" />
                <Separator />
                <MenuItem Header="_Quitter" />
            </MenuItem>
        </Menu>
        <ScrollViewer x:Name="ContentScroll">
            <Grid x:Name="Grid"></Grid>
        </ScrollViewer>
    </DockPanel>
    
</Window>
